{
  "name": "survey-inventory-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "clean": "rm -rf node_modules .turbo dist **/.next **/.turbo **/dist **/node_modules",
    "db:dev": "docker compose up -d",
    "db:generate": "pnpm --filter @packages/db db:generate",
    "db:migrate": "pnpm --filter @packages/db db:migrate",
    "db:push": "pnpm --filter @packages/db db:push",
    "db:studio": "pnpm --filter @packages/db db:studio"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
